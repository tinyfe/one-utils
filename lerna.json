{
  "version": "independent",
  "npmClient": "npm",
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "ignoreChanges": ["**/*.md", "__tests__"],
      "allowBranch": "master",
      "message": "chore(release): publish"
    },
    "run": {
      "stream": true
    },
    "bootstrap": {
      "ignorePrepublish": true,
      "hoist": true,
      "ignore": "component-*",
      "npmClientArgs": []
    },
    "version": {
      "allowBranch": "master",
      "ignoreChanges": ["**/*.md", "**/example/**", "**/__tests__/**", "**/.eslintrc.js", "**/tsconfig.json"]
    }
  },
  "hoist": ["jest", "typescript"],
  "changelog": {
    "repo": "rain120/one-utils",
    "labels": {
      "PR: New Feature": ":rocket: New Features",
      "PR: Breaking Change": ":boom: Breaking Changes",
      "PR: Bug Fix": ":bug: Bug Fix",
      "PR: Documentation": ":memo: Documentation",
      "PR: Internal": ":house: Internal",
      "PR: Underlying Tools": ":hammer: Underlying Tools"
    },
    "cacheDir": ".changelog"
  }
}
