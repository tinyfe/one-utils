{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNEXT",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": false,
    "downlevelIteration": true,
    "inlineSources": true,
    "lib": ["dom", "es2015", "es2017", "es2019"],
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "outDir": "lib",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "__tests__", "src/types", "test", "build"],
  "include": ["packages/*/src/**/*"]
}
